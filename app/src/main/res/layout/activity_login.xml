<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_fef"
    tools:context="com.cheng.fubaihui.activity.LoginActivity">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <ImageView
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@mipmap/login_logo"
        android:id="@+id/img_login"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/paw_et_checked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/login_name"
            />
        <EditText
            android:textSize="@dimen/dp_13"
            android:textColor="@color/black_theme"
            android:background="@null"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入用户名/手机号"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:background="@drawable/paw_et_checked"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_15"
            android:src="@mipmap/login_paw" />
        <EditText
            android:textSize="@dimen/dp_13"
            android:textColor="@color/black_theme"
            android:background="@null"
            android:id="@+id/et_paw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入密码"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认登陆"
        android:textColor="@color/white"
        android:background="@drawable/login_bt_checked"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/popup_bg"
            android:gravity="center"
            android:id="@+id/tv_register_now"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_20"
            android:layout_weight="1"
            android:text="立即注册"
            />
        <TextView
            android:textColor="@color/popup_bg"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/tv_forget_paw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="忘记密码"/>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/ck_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="阅读并同意福百惠用户协议及隐私保护声明"/>
    </LinearLayout>

</LinearLayout>
