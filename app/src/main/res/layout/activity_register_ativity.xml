<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cheng.fubaihui.activity.RegisterAtivity">

<android.support.v7.widget.Toolbar
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:id="@+id/register_toolbar">
    <LinearLayout
        android:id="@+id/layout_black"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/back"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"/>
    </LinearLayout>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register"
        android:layout_gravity="center"/>
</android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_theme"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_me_selected"
            />
        <EditText
            android:maxLength="11"
            android:textSize="@dimen/dp_13"
            android:textColor="@color/black_theme"
            android:background="@null"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_theme"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:layout_margin="@dimen/dp_15"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/icon_xianlu_s"
                />
        </LinearLayout>

        <EditText
            android:textSize="@dimen/dp_13"
            android:textColor="@color/black_theme"
            android:background="@null"
            android:id="@+id/et_yanzheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:hint="请输入验证码"/>
        <!--android:enabled="false"
        android:selectAllOnFocus="false"-->
        <Button
            android:id="@+id/bt_sendcode"
            android:textColor="@color/colorAccent"
            android:background="@drawable/regist_bt_yanzhengma"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="获取验证码"
            android:layout_margin="@dimen/dp_5"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_theme"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_project_selected"
            />
        <EditText
            android:textSize="@dimen/dp_13"
            android:textColor="@color/black_theme"
            android:background="@null"
            android:id="@+id/et_setpaw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请设置密码"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_theme"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:layout_margin="@dimen/dp_15"
            android:layout_gravity="center"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:src="@mipmap/icon_navigation_selected"
            />
        <EditText
            android:textSize="@dimen/dp_13"
            android:textColor="@color/black_theme"
            android:background="@null"
            android:id="@+id/et_setyaoqingma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="填写邀请码  (非必填)"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/grey_theme"/>
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/register_ck_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:textSize="@dimen/dp_13"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认注册表示您已阅读同意"/>
        <TextView
            android:id="@+id/tv_xieyi"
            android:layout_marginLeft="@dimen/dp_2"
            android:textSize="@dimen/dp_13"
            android:textColor="@color/green_theme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《福百惠注册协议》"/>
    </LinearLayout>
    <Button
        android:id="@+id/bt_register"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@drawable/login_bt_checked"
        android:text="@string/register"
        android:textStyle="bold"
        android:textSize="@dimen/dp_15"
        />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:textSize="@dimen/dp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已有账号，"
            android:textColor="@color/red_bg"/>
        <TextView
            android:textStyle="bold"
            android:textSize="@dimen/dp_13"
            android:id="@+id/tv_go_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="去登陆"
            android:textColor="@color/red_bg"
            android:autoLink="all"
            />
    </LinearLayout>
</LinearLayout>
